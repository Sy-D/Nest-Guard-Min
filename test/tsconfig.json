{
  "compileOnSave": false,

  "compilerOptions": {
    "baseUrl": "../../src",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "removeComments": false,
    "target": "es5",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "emitDecoratorMetadata": true,

    "types": [
      "node",
      "webpack-env",
      "jest"
    ],

    "lib": [
      "dom",
      "es2015"
    ],

    "paths": {
      "@src/*": [ "../src/*" ]
    }
  }
}